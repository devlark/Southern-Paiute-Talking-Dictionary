    <section class='body'>
    <!-- Instructions -->
        <section>
            <p>Input the following for a Paiute word, sentence, or phrase.</p>
        </section>
        <!-- Form -->
        <section>
            <form action="/addEntry" method="POST" enctype='multipart/form-data'>
                <input type='text' placeholder="Input word, phrase, or sentence." name='wordInput'>
                <input type='text' placeholder="Input IPA version of input." name='phoneticInput'>
                <input type='file' placeholder="Upload audio file." name='audioInput'>
                    <script type="text/javascript">  
                        var myWidget = cloudinary.createUploadWidget({
                        cloudName: process.env.CLOUD_NAME, 
                        uploadPreset: 'my_preset'}, (error, result) => { 
                            if (!error && result && result.event === "success") { 
                            console.log('Done! Here is the image info: ', result.info); 
                            }
                        })
                    
                    document.getElementById("upload_widget").addEventListener("click", function(){
                        myWidget.open();
                    }, false);
                    </script>
                <input type='text' placeholder="Put type of grammatical structure." name='grammaticalInput'>
                <input type='text' placeholder="Input translation." name='translationInput'>
                <input type='text' placeholder="Input example." name='exampleInput'>
                <input type='submit' id='submitButton' placeholder="Enter in parrot">
            </form>
            <a href ='#'>More</a>
            <!-- may get rid of the following -->
            <p id='data'></p>
        </section>
    </section>
    
