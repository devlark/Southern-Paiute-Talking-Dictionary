<!-- Body -->
<body>
    <!-- Nav bar -->
    <nav class='blue-sections'>
        <h1>Southern Paiute Dictionary</h1>
        <ul>
            <li><a href='/'>Home</a></li>
            <li><a href='/about'>About Us</a></li>
            <li><a href="/alphabet">Alphabet</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
    </nav>

    <!-- Body of page -->
    <section>
        <% if(searchQueryResults && searchQueryResults.length){ %>
            <h1>Search Results for <%= searchQuery %></h1>
            <ul>
            <% for(let result of searchQueryResults) { %>    
                <li>
                <strong>Translation:</strong> <%= result.translationInput %><br> 
                <strong>Word:</strong>  <%= result.wordInput %>
                <h1><%= `${result._id}` %></h1>
                <a href="/word?id=<%=result._id %>">Click Here</a>
                </li>
            <% } %>
            </ul>
        <% } else { %>
            <span>No Results for search: <strong><%= searchQuery %></strong></span><% } %>
        </section>
        
        <p>No more search results could be found.</p>
    </section>

    <!-- Footer -->
