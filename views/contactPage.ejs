<!-- Form -->
    <section class="contact-container">
        <h1>Contact Us</h1>
        <form id='contact-form' method="POST" action="send" enctype="multipart/form-data">
            <section class='top-line'>
                <section>
                    <span>Name</span>
                    <input type='text' placeholder="Enter your first and last name" name='userName' required>
                </section>
                <section>
                    <span>Email</span>
                    <input type="text" placeholder="Enter your email" name='userEmail'>
                </section>
            </section>
            <section class="message">
                <span>Message</span>
                <input type="text" placeholder="Enter your message here." name='userMessage'>
            </section>
            <section class="submit">
                <button type="submit" value="submit">
                    <span>Submit</span>
                    <i class="fas fa-arrow-circle-right"></i>
                </button>
            </section>
        </form>
        <section class="email-option">
            <span>Email Us</span>
            <span><a href="mailto:speakpaiute@gmail.com">speakpaiute@gmail.com</a></span>
        </section>
    </section>

